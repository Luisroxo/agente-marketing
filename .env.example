# Exemplo de configuração de ambiente
# Copie este arquivo para .env e configure suas credenciais

# Google Sheets API
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_TOKEN_FILE=token.json

# Database Configuration (Futuro)
DATABASE_URL=postgresql://user:password@localhost:5432/marketing_agent
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=marketing_agent
DATABASE_USER=user
DATABASE_PASSWORD=password

# API Configuration (Futuro)
API_PORT=3001
API_SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# External APIs (Opcional)
OPENAI_API_KEY=your-openai-key-here

# Debug Settings
DEBUG=True
LOG_LEVEL=INFO

# Cache Settings
CACHE_TTL=3600
ENABLE_CACHE=True